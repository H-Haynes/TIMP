{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "suppressImplicitAnyIndexErrors":true,
    "types" : ["node"],
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "/@/*": [
        "./src/*"
      ]
    },
    "lib": ["ESNext", "dom", "dom.iterable"]
  },

  "include": [
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts",
    "../../types/**/*.d.ts",
    "../preload/exposedInMainWorld.d.ts"
, "src/base64.js"  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
  ]
}
