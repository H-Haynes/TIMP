{
  "name": "TIMP-Music-Station",
  "private": true,
  "version": "1.0.0",
  "ISC": "MIT",
  "engines": {
    "node": ">=v16.13",
    "npm": ">=8.1"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:preload:types": "dts-cb -i \"packages/preload/tsconfig.json\" -o \"packages/preload/exposedInMainWorld.d.ts\"",
    "build:renderer": "cd ./packages/renderer && vite build",
    "compile": "cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "test": "npm run test:main && npm run test:preload && npm run test:renderer && npm run test:e2e",
    "test:e2e": "npm run build && vitest run",
    "test:main": "vitest run -r packages/main --passWithNoTests",
    "test:preload": "vitest run -r packages/preload --passWithNoTests",
    "test:renderer": "vitest run -r packages/renderer --passWithNoTests",
    "watch": "node scripts/watch.js",
    "lint": "eslint . --ext js,ts,vue",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "npm run build:preload:types && vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "npm run typecheck:main && npm run typecheck:preload && npm run typecheck:renderer",
    "electron": "electron .",
    "dist": "npm run build & electron-builder"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@vitejs/plugin-vue": "2.1.0",
    "@vue/test-utils": "2.0.0-rc.18",
    "autoprefixer": "^10.4.2",
    "cross-env": "7.0.3",
    "dts-for-context-bridge": "0.7.1",
    "electron": "17.0.0",
    "electron-builder": "^22.14.13",
    "electron-devtools-installer": "3.2.0",
    "eslint": "8.8.0",
    "eslint-plugin-vue": "8.4.1",
    "happy-dom": "2.31.1",
    "husky": "^7.0.4",
    "nano-staged": "0.5.0",
    "playwright": "1.18.1",
    "postcss": "^8.4.6",
    "simple-git-hooks": "2.7.0",
    "typescript": "4.5.5",
    "unplugin-auto-import": "^0.5.11",
    "unplugin-vue-components": "^0.17.18",
    "vite": "2.7.13",
    "vite-plugin-windicss": "^1.7.0",
    "vitest": "0.2.7",
    "vue-tsc": "0.31.2",
    "windicss": "^3.4.3"
  },
  "dependencies": {
    "@types/node": "^17.0.17",
    "@typescript-eslint/parser": "^5.11.0",
    "axios": "^0.25.0",
    "electron-log": "^4.4.6",
    "electron-updater": "4.6.5",
    "element-plus": "^2.0.1",
    "less": "^4.1.2",
    "mitt": "^3.0.0",
    "postcss-import": "^14.0.2",
    "source-map-support": "^0.5.21",
    "update-electron-app": "^2.0.1",
    "vue": "3.2.29",
    "vue-router": "4"
  },
  "build": {
    "appId": "com.electron.app",
    "copyright": "CopyRight XingHe Team©️2022",
    "productName": "TIMP Music",
    "files": [
      "!dist/**/*"
    ],
    "mac": {
      "icon": "buildResources/logo.icns",
      "category": "public.app-category.productivity",
      "artifactName": "${productName}v${version}.${ext}",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "buildResources/logo.icns",
      "artifactName": "${productName}_${version}.${ext}",
      "verifyUpdateCodeSignature": false,
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "createDesktopShortcut": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "repository":{
    "type":"git",
    "url":"git@preferyou.cn:root/timp.git"
  }
}
